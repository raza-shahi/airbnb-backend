<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-[url('/flat.jpg')] bg-cover bg-center bg-no-repeat">
   <%- include('../partials/nav') %>

    <main class="container mx-auto flex flex-col items-center justify-center mt-16 px-4">
        <div class="bg-white/80 backdrop-blur p-8 rounded-xl shadow-xl max-w-md w-full">
            <h2 class="text-2xl font-semibold text-gray-800 mb-6 text-center">
                Start Hosting Your Space
            </h2>
            
            <a href="/host/add-home" 
               class="group bg-rose-500 text-white px-6 py-3 rounded-lg 
                      hover:bg-rose-600 transition-all duration-300
                      shadow-md hover:shadow-xl
                      flex items-center justify-center gap-3
                      transform hover:scale-105">
                <svg xmlns="http://www.w3.org/2000/svg" 
                     class="h-6 w-6 transition-transform duration-300 group-hover:rotate-12" 
                     viewBox="0 0 20 20" 
                     fill="currentColor">
                    <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                </svg>
                <span class="text-lg font-semibold">Add Your Home</span>
            </a>
        </div>
    </main>
        <section class="container mx-auto mt-8 px-4">
        <h2 class="text-2xl text-gray-100 font-semibold mb-4">Registered Homes</h2>
        
    
        <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% if(registeredHouses && registeredHouses.length > 0) { %>
                <% registeredHouses.forEach(home => { %>
                    <li class="bg-white/80 backdrop-blur p-4 rounded-lg shadow">
                        <% if(home && home.housename) { %>
                            <div class="space-y-3">
                                <h3 class="text-xl font-semibold text-gray-800">
                                    <%= home.housename %>
                                </h3>
                                <p class="text-rose-600 font-medium">â‚¹<%= home.pricePernight %> per night</p>
                                <p class="text-gray-600">Location: <%= home.location %></p>
                                <p class="text-gray-600">Ratings: <%= home.ratings %> / 5</p>
                                <img src="<%= home.image %>" 
                                     alt="Image of <%= home.housename %>" 
                                     class="w-full h-48 object-cover rounded-lg shadow">
                                <div class="flex gap-3 mt-4">
                                    <a href="/homes/<%= home.id %>" 
                                       class="bg-rose-500 text-white px-4 py-2 rounded-lg hover:bg-rose-600 transition-all duration-300 shadow-md">
                                        View Details
                                    </a>
                                    <button class="bg-rose-500 text-white px-4 py-2 rounded-lg hover:bg-rose-600 transition-all duration-300 shadow-md">
                                        Book Now
                                    </button>
                                </div>
                            </div>
                        <% } else { %>
                            <span class="text-red-500">Invalid home data</span>
                        <% } %>
                    </li>
                <% }) %>
            <% } else { %>
                <li class="col-span-full text-center p-4 bg-gray-50 rounded">
                    No homes registered yet.
                </li>
            <% } %>
        </ul>
    </section>
</body>
</html>