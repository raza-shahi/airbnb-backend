<%- include('../partials/head') %>
    </head>

    <body class="min-h-screen bg-[url('/flat.jpg')] bg-cover bg-center bg-no-repeat">
        <%- include('../partials/nav') %>

            <main class="container mx-auto flex flex-col items-center justify-center mt-16 px-4">
                <div class="bg-white/80 backdrop-blur p-8 rounded-xl shadow-xl max-w-md w-full">
                    <h2 class="text-2xl font-semibold text-gray-800 mb-6 text-center">
                        Home Details
                    </h2>

                    <% if (home) { %>
                        <div class="space-y-4">
                            <img src="<%= home.image %>" alt="<%= home.housename %>"
                                class="w-full h-64 object-cover rounded-lg shadow">

                            <h3 class="text-xl font-bold text-gray-800">
                                <%= home.housename %>
                            </h3>

                            <div class="flex justify-between items-center">
                                <p class="text-gray-600">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <%= home.location %>
                                </p>
                                <p class="text-green-600 font-semibold">
                                    $<%= home.pricePernight %>/night
                                </p>
                            </div>

                            <div class="flex items-center">
                                <i class="fas fa-star text-yellow-400"></i>
                                <span class="ml-1 text-gray-700">
                                    <%= home.ratings %> ratings
                                </span>
                            </div>
                        </div>
                        <% } else { %>
                            <p class="text-gray-600 text-center">Home details not found.</p>
                            <% } %>
                            <div>
                                <%- include('../partials/favorites', { home: home }) %>
                            </div>
                </div>
            </main>
    </body>

    </html>